#include <tunables/global>

profile myprofile {

	#include <abstractions/base>
	#include <abstractions/nameservice>

	capability kill,
	capability net_bind_service,
	capability setgid,
	capability setuid,
	capability sys_tty_config,

	/ rw,
	/** mrwlkix,

	audit deny /etc/passwd rwx,

	^myhat {

		#include <abstractions/base>
		#include <abstractions/nameservice>
	
		capability kill,
		capability net_bind_service,
		capability setgid,
		capability setuid,
		capability sys_tty_config,

		/ rw,
		/** mrwlkix,
		
		audit deny /etc/passwd rwx,
		audit deny /etc/group rwx,		
	}
}
