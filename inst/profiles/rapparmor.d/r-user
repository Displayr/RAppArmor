profile r-user {
	#include <abstractions/base>
	#include <abstractions/nameservice>

	capability kill,
	capability net_bind_service,
	capability setgid,
	capability setuid,
	capability sys_tty_config,
	
	@{HOME}/R rw,
	@{HOME}/R/** rw,
		
	/bin/* rix,
	/etc/R/ r,
	/etc/R/* r,
	/etc/fonts/** mr,
	/etc/resolv.conf r,
	/etc/xml/* r,
	/tmp/** rw,
	/usr/bin/* rix,
	/usr/lib/R/bin/* rix,
	/usr/lib{,32,64}/** mr,
	/usr/lib{,32,64}/R/bin/exec/R rix,
	/usr/local/lib/R/** mr,
	/usr/local/share/** mr,
	/usr/share/** mr,
	/usr/share/ca-certificates/** r,
}
